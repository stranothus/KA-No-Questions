{
    "manifest_version" : 2,
    "name" : "KA-No-Questions",
    "version" : "0.1.0",
    "description" : "Automatically move to Tips and Thanks instead of Questions to avoid embarrassment.",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "https://www.khanacademy.org/*"
    ],
    "icons": {
        "128": "icons/128.png",
        "48": "icons/48.png",
        "32": "icons/32.png",
        "16": "icons/16.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.khanacademy.org/*"],
            "js": ["content.js"]
        }
    ]
}